# webservertune-enhance â€” settings.conf

[general]
log_level = "INFO"
debounce_seconds = 10


[nginx]
backup_retention_days = 30

[nginx.features]
http3_enable = false
quic_gso_enable = false
ssl_upgrade = false
server_hardening = false
cms_protection = false
persistent_logging = false
real_ip_logging = false
fastcgi_cache_inactive = "60m"
fastcgi_cache_valid = "60m"
client_max_body_size = "200m"


[ols-webserver]
backup_retention_days = 30

[ols-webserver.general]
#cpuAffinity  = "1"
#enableLVE    = "0"
#inMemBufSize = "128M"

[ols-webserver.tuning]
#sndBufSize         = "512K"
#rcvBufSize         = "512K"
#useAIO             = "3"
#AIOBlockSize       = "3"
#quicEnable         = "1"
#quicVersions       = "h3"
#quicCongestionCtrl = "2"

["ols-webserver"."errorlog logs/error.log"]
#logLevel        = "WARN"
#debugLevel      = "0"
#rollingSize     = "25M"
#keepDays        = "7"
#compressArchive = "1"
#enableStderrLog = "1"

["ols-webserver"."accesslog logs/access.log"]
#rollingSize     = "25M"
#keepDays        = "7"
#compressArchive = "1"


[ols-503fix]
#enhance_url      = "https://example.com/api"
#enhance_token    = ""
#window_seconds   = 30
#min_503_count    = 5
#min_503_percent  = 50
#last_n_requests  = 10
#cooldown_seconds = 60
#scan_interval    = 1
